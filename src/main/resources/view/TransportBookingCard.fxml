<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="5" top="5" />
      </padding>
      <HBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="mode" styleClass="cell_big_label" text="\\$mode" />
      </HBox>
      <FlowPane fx:id="tags" />
      <Label fx:id="startlocation" styleClass="cell_small_label" text="\\$startlocation" />
         <Label fx:id="endlocation" layoutX="25.0" layoutY="54.0" styleClass="cell_small_label" text="\\$endlocation" />
      <Label fx:id="starttime" styleClass="cell_small_label" text="\\$starttime" />
         <Label fx:id="endtime" layoutX="25.0" layoutY="80.0" styleClass="cell_small_label" text="\\$endtime" />
    </VBox>
    <rowConstraints>
      <RowConstraints />
    </rowConstraints>
  </GridPane>
</HBox>
